# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# WhatsApp Business API Configuration (Official)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Third-party WhatsApp API Configuration (Alternative)
USE_THIRD_PARTY_WHATSAPP=false
THIRD_PARTY_WHATSAPP_URL=https://api.example.com/send-whatsapp
THIRD_PARTY_WHATSAPP_TOKEN=your_third_party_api_token

# Development Mode
NODE_ENV=development
